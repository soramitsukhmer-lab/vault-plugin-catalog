{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "title": "Plugin Catalog Schema",
    "type": "object",
    "properties": {
        "version": {
            "type": "string",
            "default": "v1.0",
            "description": "The version of the catalog schema, e.g., 'v1.0'."
        },
        "plugins": {
            "type": "object",
            "description": "The collection of plugins available in the catalog.",
            "default": {},
            "properties": {
                "secrets": {
                    "type": "object",
                    "description": "Plugin for managing secrets.",
                    "default": {},
                    "patternProperties": {
                        "^[a-zA-Z0-9-_]+$": {
                            "type": "object",
                            "description": "The plugin identifier, which can be any alphanumeric string with dashes or underscores.",
                            "properties": {
                                "name": {
                                    "$ref": "#/definitions/pluginMetadata/name"
                                },
                                "version": {
                                    "$ref": "#/definitions/pluginMetadata/version"
                                },
                                "repo": {
                                    "$ref": "#/definitions/pluginMetadata/repo"
                                },
                                "releases": {
                                    "type": "object",
                                    "properties": {
                                        "linux": {
                                            "$ref": "#/definitions/osRelease"
                                        },
                                        "darwin": {
                                            "$ref": "#/definitions/osRelease"
                                        }
                                    },
                                    "additionalProperties": false
                                }
                            },
                            "required": ["name", "version", "repo", "releases"],
                            "additionalProperties": false
                        }
                    },
                    "additionalProperties": false
                }
            },
            "additionalProperties": false
        }
    },
    "required": ["version", "plugins"],
    "additionalProperties": false,
    "definitions": {
        "pluginMetadata": {
            "type": "object",
            "properties": {
                "name": {
                    "type": "string",
                    "description": "The name of the plugin, e.g., 'transit'.",
                    "default": ""
                },
                "version": {
                    "type": "string",
                    "description": "The version of the plugin, e.g., '0.0.1-alpha.1'.",
                    "default": ""
                },
                "repo": {
                    "type": "string",
                    "format": "uri",
                    "description": "The repository where the plugin is hosted, e.g., 'soramitsukhmer-lab/vault-plugin-iroha-transit-secrets'.",
                    "default": ""
                }
            }
        },
        "osRelease": {
            "type": "object",
            "properties": {
                "amd64": {
                    "$ref": "#/definitions/releaseInfo"
                },
                "arm64": {
                    "$ref": "#/definitions/releaseInfo"
                }
            },
            "additionalProperties": false
        },
        "releaseInfo": {
            "type": "object",
            "properties": {
                "url": { "type": "string", "format": "uri" },
                "sha256": { "type": "string" }
            },
            "required": ["url", "sha256"],
            "additionalProperties": false
        }
    }
}
